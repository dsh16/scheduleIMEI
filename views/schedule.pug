extends layout
mixin dropdown(subject)
    div(class="dropdown show dropright")
        a(class="dropdown-toggle"  role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") #{subject}
        div(class="dropdown-menu" aria-labelledby="dropdownMenuLink")
            a(class="dropdown-item")="Изменить"
            div(class="dropdown-divider")
            a(class="dropdown-item")="Удалить"
block variables
    include variables.pug
    - var days=["пн","вт","ср","чт","пт","сб"]
    //- var counter=[1,2,3,4,5,6,7]
    -var counter=["8.30","10.10","11.50","13.50","15.20","17.00","18.30"]
    -var group1=""
block content
    br
    h2=title
    br
    div(class="wrapper")
    div(class="edit-div row")
        div(class="leftSide col-2")
            div(class="input-group input-group-sm")
                select(class="custom-select newUrl" id="inputGroupSelect04" /*onChange="location = this.value;"*/)
                    option(value="")
                    each studyGroup in studyGroups
                        if(val.id == studyGroup.id)
                            option(selected value=val.id) #{val.name}
                        if(val.id != studyGroup.id)
                            option(value=studyGroup.id) #{studyGroup.name}
        div(class="tabbable")
            ul(class="nav")
                li(class="active")
                    a(href="#tab1" class="btn btn-primary btn-lg active" data-toggle="tab" ) Четная неделя
                    a(href="#tab2" class="btn btn-primary btn-lg" data-toggle="tab") Нечетная неделя

        div(class="leftSide col-12")
            div(id='editSchedule' class="scheduleDiv")
                div(class="tab-content")
                    div(class="tab-pane active" id="tab1")
                        table(class="schedule table table-bordered table-responsive-md" id="scheduleTable")
                            thead
                                tr
                                    th
                                    each val in weekdays
                                        th(class=val.day)=val.day
                            div(class="dropdown show dropright")
                                tbody
                                    each val in times
                                        tr
                                            th(class=val.time) #{val.time}
                                            each val in weekdays
                                                td
                                                    div(class="subject-card")
                                                        div(class="subject-card-name")
                                                            p(class="nameSubject")=""
                                                        div(class="subject-card-teacher")
                                                            p(class="teacher")=""
                                                        div(class="subject-card-classroom")
                                                            p(class="classroom")=""
                    div(class="tab-pane" id="tab2")
                        table(class="schedule table table-bordered table-responsive-md" id="scheduleTable2")
                            thead
                                tr
                                    th
                                    each val in weekdays
                                        th(class=val.day)=val.day
                            div(class="dropdown show dropright")
                                tbody
                                    each val in times
                                        tr
                                            th(class=val.time) #{val.time}
                                            each val in weekdays
                                                td
                                                    div(class="subject-card")
                                                        div(clas="subject-card-name")
                                                            p(class="nameSubject")=""
                                                        div(class="subject-card-teacher")
                                                            p(class="teacher")=""
                                                        div(class="subject-card-classroom")
                                                            p(class="classroom")=""