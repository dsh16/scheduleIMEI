extends ../layout
block variables
    include ../variables
block content
    if username!=''
        h3= "Удаление"
        br
        form(action='/delTeacher/'+val.id, method='post')
            p() #{val.id}. #{val.lastname} #{val.firstname} #{val.patronymic} #{val.rank}
            br
            div(class="form-row")
                div(class="col")
                    input(class="btn " type='submit' value='Удалить')
        br
        form(action='/listTeacher' method='get')
            div(class="form-row")
                div(class="col")
                    input(class="btn " type='submit' value='Отмена')
