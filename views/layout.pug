block variables

doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.grit.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.reboot.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.css')
    script(src="/javascripts/popper.min.js")
    script(src='/javascripts/jquery-3.3.1.min.js')
    script(src='/javascripts/bootstrap/bootstrap.min.js')
    script(src="/javascripts/script.js")
  body
    nav(class="navbar fixed-top text-light navbar-dark bg-primary")
      a(class="navbar-brand text-light" href="/")="Расписание ИМЭИ ИГУ"
      if (!usern)
        a(class="navbar-brand text-light" href="/login")="Войти"
      else
        div(class="collapse navbar-collapse" id="navbarSupportedContent")
          ul(class="navbar-nav")
            li(class="nav-item dropdown")

        div Вы вошли как #{lastn} #{firstn} #{patronymic} #{username} (#{type_user})
        form.form-inline.my-2.my-lg-0
          div(class='dropdown col-md-4')
              button(class='btn btn-primary dropdown-toggle',type='button', data-toggle='dropdown') Меню
              ul(class='dropdown-menu dropdown-menu-right')
                a(class='dropdown-item',href='/personalAccount') Личный кабинет
                if (type_user == 'Администратор')
                  a(class='dropdown-item',href="/register")="Регистрация"
                div(class='dropdown-divider')
                a(class='dropdown-item',href="/logout")="Выйти"

        div(class='nav navbar-nav navbar-right dropdown')
            button(class='btn btn-primary dropdown-toggle',type='button', data-toggle='dropdown') Меню
            ul(class='dropdown-menu dropdown-menu-right')
                a(class='dropdown-item',href='/personalAccount') Личный кабинет
                if (type_user == 'Администратор')
                    a(class='dropdown-item',href="/register")="Регистрация"
                div(class='dropdown-divider')
                a(class='dropdown-item',href="/logout")="Выйти"
    br
    block content