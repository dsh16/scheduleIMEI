extends ../layout
block variables
    include ../variables
block content
    br
    div.container
        div.row
            div.login
                h2.text-center.login-title Регистрация пользователя
                p()
                if (!type_user)
                    p(class="text-center") Регистрация новых пользователей доступна только через администратора
                if type_user == 'Староста'
                    p(class="text-center") Регистрация новых пользователей доступна только через администратора
                if type_user == 'Администратор'
                    div.account-wall
                    form(class='form-signin', action='/register', method='POST')
                        div(class="form-group")
                            label(class="text-form") Введите логин:
                            input(type='text', name='username' class='form-control', placeholder='Логин',required, autofocus)

                            label(class="text-form") Введите пароль:
                            input(type='password', name='password' class='form-control', placeholder='Пароль', required)

                            label(class="text-form") Подтвердите пароль:
                            input(type='password', name='password2' class='form-control', placeholder='Пароль', required)

                            label(class="text-form") Введите e-mail:
                            input(type='text', name='email' class='form-control', placeholder='E-mail',required)

                            label(class="text-form") Фамилия:
                            input(type='text', name='lastname' class='form-control', placeholder='Фамилия', required)

                            label(class="text-form") Имя
                            input(type='text', name='firstname' class='form-control', placeholder='Имя', required)

                            label(class="text-form") Отчество
                            input(type='text', name='patronymic' class='form-control', placeholder='Отчество', required)

                            label(class="text-form") Тип пользователя
                            select(type='text', name='type_user' class='form-control' id='Select1' onChange="typeUserRegister(this)")
                                each val in list
                                    option #{val.name}

                            div(id='Label1' style='display: none;')
                                label(class="text-form") Номер группы
                                select(type='text', name='studyGroups' class='selectpicker')
                                    each val in studyGroups
                                        option #{val.name}
                                //option Администратор
                                //option Староста

                            p
                                button(class='btn btn-lg btn-primary btn-block', type='submit') Зарегистрировать
                            span.clearfix
                    //a(href='/signup', class='text-center new-account') Create an account

                    #message
                    if message
                    h1.text-center.error-message #{message}


